<h1>Intento de registro</h1>

<form action="/user/register" method="POST" enctype="multipart/form-data">
    <div>
        <label for="">Name:</label>
        <input type="text" name = "name" value="<%= locals.oldBody && oldBody.name? oldBody.name: "" %>">
    </div>
    <div>
        <label for="">Lastname:</label>
        <input type="text" name = "lastname" value="<%= locals.oldBody && oldBody.lastname? oldBody.lastname: "" %>">
        
    </div>
    <div>
        <label for="">Email:</label>
        <input type="email" name="email" id="" value="<%= locals.oldBody && oldBody.email? oldBody.email: "" %>">
        <% if (locals.error && error.email) { %>
            <p><%= error.email.msg %></p>
        <% } %>
        
    </div>
    <div>
        <label for="">Password</label>
        <input type="password" name = "password">
        
    </div>
    <div>
        <label for="">Check your password</label>
        <input type="password" name = "cheackPassword">
    </div>
    <div>
        <label for="">photo</label>
        <input type="file" name = "image">
        
    </div>
    <div class="button">
        <button type="submit">Enviar</button>
    </div>
    </form>


